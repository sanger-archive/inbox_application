<ol class="breadcrumb">
  <li class="active"><%= t(:teams_path,scope: :links) %></li>
</ol>

<h1><%= t('application.title') %></h1>

<section class="<%= Team.model_name.element %>-list-section">
<% if @teams.empty? %>
  <%= render partial: 'creation_prompt', locals: { model_name: Team.model_name.human(count: 2), creation_link: new_team_path } %>
<% else %>
<% count = @teams.count %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Team.model_name.human(count: count) %> <span class="badge"><%= count %></span></h3>
    </div>
    <div class="panel-body">
      <p><%= t('.pick_a_team') %></p>
    </div>
    <div class="team-list list-group">
      <%= render(@teams) %>
    </div>
    <div class="panel-footer">
      <%= link_to t('.new_team'), new_team_path, class:'btn btn-success' %>
      <%= link_to t('.inboxes_index'), inboxes_path, class:'btn btn-default' %>
    </div>
  </div>
<% end %>
</section>


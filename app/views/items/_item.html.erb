<%= form.fields_for :items do |item_form| %>
<li class="list-group-item list-item"><div class="row">
<div class='col-sm-10'>
<h4><%= item.name %></h4>
<dl class='details-list list-inline dl-inline'>
<% item.each_primary_detail do |key,value| %>
  <dt><%= key.titleize %></dt><dd><%= value %></dd>
<% end %>
</dl>
<dl class='associations-list list-inline dl-inline'>
<% item.each_primary_association do |key,values| %>
  <dt><%= key.titleize %></dt><dd>
    <ul class='list-inline'>
      <% values.each do |value| %>
        <li><%= value %></li>
      <% end %>
    </ul>
  </dd>
<% end %>
</dl>
</div>
<div class='col-sm-2'>
    <%= item_form.label item.uuid, "Select #{item.name}" %>
    <%= item_form.check_box item.uuid, class:"checkbox-item" %>
</div>
</div>
</li>
<% end %>

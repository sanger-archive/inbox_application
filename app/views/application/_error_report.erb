<% if record.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t(:record_invalid,scope:[:activerecord,:errors,:models,record.model_name.i18n_key],count:record.errors.count) %></h3>
    </div>
    <div class="panel-body">
      <ul>
      <% record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>
